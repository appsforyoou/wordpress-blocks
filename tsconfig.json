{
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext"
        }
    },
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "target": "ES6",
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "jsx": "react-jsx",
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "paths": {
            "*": [
                "node_modules/*",
                "src/types/*"
            ],
        }
    },
    "include": [
        "src/**/*"
    ]
}