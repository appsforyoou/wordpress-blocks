{
    "ts-node": {
        "compilerOptions": {
            "module": "ESNext"
        }
    },
    "compilerOptions": {
        "module": "ESNext",
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "lib": [
            "ESNext",
            "DOM",
            "DOM.Iterable",
        ],
        "skipLibCheck": true,
        "target": "ES5",
        "resolveJsonModule":true,
        "noImplicitAny": true,
        "moduleResolution": "Node",
        "jsx": "preserve",
        "downlevelIteration":true,
        "sourceMap": true,
        "outDir": "dist",
        "baseUrl": ".",
        "allowJs": true
    },
    "include": [
        "src/**/*"
    ]
}